<script>
var we = document.documentElement.clientWidth;
var he = document.documentElement.clientHeight;
var a = 0;
var maxu = 0;
temp.onclick = function () {
  if (a == 0) {
    temp.style.width = '643px';
    temp.style.height = '373px';
    a = 1;
  } else {
    temp.style.width = '143px';
    temp.style.height = '73px';
    a = 0;
  }
}
var editor = CodeMirror.fromTextArea(document.getElementById('cd'), {
  mode: 'htmlmixed',
  lineNumbers: true,
  autoCloseTags: true,
  theme: 'monokai',
  foldGutter: true,
  matchBrackets: true,
	lineWrapping: true,
	autofocus: true,
  gutters: ["CodeMirror-linenumbers", "CodeMirror-foldgutter"],
  extraKeys: {
    "Ctrl-Space": "autocomplete",
    "Ctrl-Q": function(cm){ cm.foldCode(cm.getCursor()); }},
  blastCode: { effect: 2 }
});
var styl = document.createElement('style');
styl.innerHTML = '.cm-s-monokai{width: ' + we + 'px; height: ' + he + 'px;}';
document.body.appendChild(styl);
function add () {
  editor = CodeMirror.fromTextArea(document.getElementById('cd'), {
    mode: 'javascript',
    lineNumbers: true,
    theme: 'darcula',
    foldGutter: true,
    matchBrackets: true,
    gutters: ["CodeMirror-linenumbers", "CodeMirror-foldgutter"],
    extraKeys: {
      "Ctrl-Space": "autocomplete",
      "Ctrl-Q": function(cm){ cm.foldCode(cm.getCursor()); }},
    blastCode: { effect: 2 }
  });
}
document.onkeyup = function (e) {
  go();
}
 var socket = io();
 socket.on('users', function(users) {
  if (users > maxu) {
    maxu = users;
  }
 });
 function go () {
  let code1 = editor.getValue();
  socket.emit('code1', code1);
 }
</script>
